<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.personal.PersonalActivity"
    android:padding="10dp">

    <EditText
        android:id="@+id/edit_text_personal_fact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Personal Fact"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/button_submit_personal_fact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Insert new personal fact"
        android:layout_marginBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_personal_facts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        tools:listitem="@layout/card_fact"/>


</LinearLayout>